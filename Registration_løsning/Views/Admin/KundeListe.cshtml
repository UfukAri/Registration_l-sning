@model IList<Model.dbKunde>

@{
    ViewBag.Title = "KundeListe";
}

<h2 style="color:white;">KundeListe</h2>

<p style="color:white;">
    @Html.ActionLink("Create New", "Register")
</p>

<div style="color:white;">
    <table class="table">
        <tr>
            <th>
                Firstname
            </th>
            <th>
                Lastname
            </th>
            <th>
                Email
            </th>
            <th>
                PostSted
            </th>
            <th>
                PostNr
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Firstname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Lastname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Poststed.PostSted)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Poststed.PostNr)
                </td>

                <td>
                    @Html.ActionLink("Edit", "EditKunde", new { id = item.id }) |
                    @Html.ActionLink("slett", "Slett", new { id = item.id })
                </td>
            </tr>
        }

    </table>

</div>


